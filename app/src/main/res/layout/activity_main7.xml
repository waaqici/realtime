<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:gravity="center"

    android:padding="10dp"
    tools:context="com.example.profraakici.realtime.Main7Activity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="160dp"
        android:layout_height="160dp"

        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/logo" />

    <TextView

        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:text="Real Time App"
        android:textColor="#148ac4"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/txtbalance"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"


        android:layout_marginTop="64dp"
        android:text="For More Information Please Contact US"
        android:textColor="#4480c6"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/txtbalanc"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtbalance"


        android:text="Email:contact@realtime.so"
        android:textColor="#4480c6"
        android:textSize="26dp" />
</RelativeLayout>
